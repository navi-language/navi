use std.net.http.Body;
use std.io.{Read, Cursor};

test "new" {
    let body: Read = Body.new("Hello world".bytes());
    assert_eq try body.read_to_string(), "Hello world";
}

test "from_string" {
    let body: Read = Body.from_string("Hello world");
    assert_eq try body.read_to_string(), "Hello world";
}

test "from_reader" {
    let body: Read = Body.from_reader(Cursor.from_string("Hello world"));
    assert_eq try body.read_to_string(), "Hello world";
}
